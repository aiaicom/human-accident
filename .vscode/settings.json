    "editor.fontFamily": "'Fira Code', 'D2Coding', Consolas, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    // "editor.fontWeight": "bold",
    "editor.fontWeight": "550",

    // üü¢ theme
    // "workbench.iconTheme": "material-icon-theme",
