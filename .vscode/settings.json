    // üü¢ ÏÉâÏÉÅ
    "editor.tokenColorCustomizations": {
        "textMateRules": [
        // {
        //     "scope": "comment",
        //     "settings": {
        //     "foreground": "#A0A1A7",
        //     "fontStyle": ""
        //     }
        // },
        {
            "scope": "string",
            "settings": {
            "foreground": "#d300c1"
            }
        },
        {
            "scope": "constant.numeric",
            "settings": {
            "foreground": "#8315f1",
            "fontStyle": "bold"
            }
        },
        {
            "scope": "keyword",
            "settings": {
            // "foreground": "#4078F2",
            "foreground": "#946904",
            "fontStyle": "bold"
            }
        },
        {
            "scope": "variable",
            "settings": {
            "foreground": "#383A42"
            }
        },
        {
            "scope": "entity.name.function",
            "settings": {
            "foreground": "#049f32",
            // "fontStyle": "bold"
            }
        },
        {
            "scope": "entity.name.type.class",
            "settings": {
            "foreground": "#f55142",
            "fontStyle": "bold"
            }
        }
        ]
    }
}

